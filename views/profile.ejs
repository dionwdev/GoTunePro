          <div class="profileContainer">

        
            <div class="gotempBox2">
              
              <div class="down-content">
                <h4> <%= user.userName %>'s Tracks</h4>
                <p> <%= user.email %> </p>
                 <h5 class="description">
                   Track Manager
                 </h5>
              </div>



                <ul class="tracklist">
                  <% for(var i=0; i<posts.length; i++) {%>
                    <li>
                    <div class="trackRow">

                      <div class="listEditBox">
                        <form action="/post/deletePost/<%= posts[i].id%>?_method=DELETE" method="POST" >
                          <button class="fa fa-trash tracklistButton" type="submit"></button>
                        </form>

                        <form action="/post/edit/<%= posts[i]._id%>" enctype="multipart/form-data" method="GET" class="col-3">
                          <button type="submit" class="fa fa-gear tracklistButton" value="Edit"></button>
                          </form>
                          
                      </div> 

                      <a href="/post/<%= posts[i]._id%>">
                        <img class="trackthumb" src="<%= posts[i].image%>">
                      </a>
                      <a href="/post/<%= posts[i]._id%>">
                        <div class="titleBox">
                          <p><%= posts[i].title%></p>
                          <p><%= posts[i].artist%></p>
                        </div>
                      </a>
                        
                    </div>
                    




                    </li>

                  <% } %>

                </ul>
            </div>


            <div class="gotempBox2">

              <div class="mt-5">
                <h4>Add Track</h4>
                <form action="/post/createPost" enctype="multipart/form-data" method="POST">
    
                  <div class="mb-3">
                    <label for="file" class="form-label">choose .mp3</label>
                    <input type="file" class="form-control" id="file" name="file">
                  </div>
    
                  <button type="submit" class="main-button-yellow" value="Upload">Submit</button>
                </form>
              </div>

            </div>
          

          </div>
          
        
